generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int         @id @default(autoincrement())
  email           String      @unique @db.VarChar(64)
  username        String?     @unique
  password        String      @db.VarChar(255)
  name            String?
  contact_number  String?     // Menambahkan kolom untuk nomor kontak
  dob             DateTime?   @db.Date
  gender          String?
  firebaseUid     String?     // Menandakan bahwa firebaseUid nullable
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  diaries         Diary[]     @relation("UserDiaries")
  analytics       Analytic[]  @relation("UserAnalytic")

  @@map("user")
}


model Diary {
  id              Int         @id @default(autoincrement())
  date            DateTime
  title           String
  story           String      @db.VarChar(254)
  emotion         String?     
  response        String?
  favorited       Boolean     @default(false)
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  userId          Int         
  user            User        @relation("UserDiaries",fields: [userId], references: [id])

  @@map("diary")
}

model Analytic {
  id              Int         @id @default(autoincrement())   
  total_diary     Int         @default(0)                   
  quotes          String?     
  created_at      DateTime    @default(now())                
  updated_at      DateTime    @updatedAt
  userId          Int         
  user            User        @relation("UserAnalytic",fields: [userId], references: [id])

  @@map("analytic")
}