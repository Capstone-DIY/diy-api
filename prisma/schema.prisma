generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int         @id @default(autoincrement()) 
  username        String      @unique
  password        String
  name            String?
  dob             DateTime?   @db.Date
  email           String?     @unique @db.VarChar(64)
  gender          String?
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  diaries         Diary[]     @relation("UserDiaries")
  analytics       Analytic[]  @relation("UserAnalytic")

  @@map("user")
}

model Diary {
  id              Int         @id @default(autoincrement())
  date            DateTime
  title           String
  story           String      @db.VarChar(254)
  emotion         String?     
  favorited       Boolean     @default(false)
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  userId          Int         @default(1) //???
  user            User        @relation("UserDiaries",fields: [userId], references: [id])

  @@map("diary")
}

model Analytic {
  id              Int         @id @default(autoincrement())   
  total_diary     Int         @default(0)                   
  quotes          String?     
  created_at      DateTime    @default(now())                
  updated_at      DateTime    @updatedAt
  userId          Int         @default(1) //???
  user            User        @relation("UserAnalytic",fields: [userId], references: [id])

  @@map("analytic")
}